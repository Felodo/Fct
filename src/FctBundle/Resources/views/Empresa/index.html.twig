{% extends "FctBundle::layout.html.twig" %}

{% block content %}
    <br>
    <h2>Listado de los ciclos</h2>
    <hr>
    {% for message in app.session.flashbag().get('status') %}
        <div class="alert alert-success">{{message}}</div>
        <hr>
    {% endfor %}
    <div class="col-lg-4"><a class="btn btn-success btn-lg" href="{{path("fct_create_empresa")}}">AÃ±adir empresa</a><div>
            <br>
            <div class="col-lg-4">
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th>CIF</th>
                            <th>Nombre</th>
                            <th>Direccion</th>
                            <th>Provincia</th>
                            <th>Poblacion</th>
                            <th>Correo electronico</th>
                            <th>Telefonos</th>
                            <th>Operaciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for empresa in empresas %}
