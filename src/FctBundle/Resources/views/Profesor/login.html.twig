{% extends "FctBundle::layout.html.twig" %}
{% block content %}
    
    {% if app.user != null %}
        {{dump(app.user)}}
    {% endif %}
    
    {% if is_granted('ROLE_DIRECCION') %}
        <div>
            Estas logueado como administrador
        </div>
    {% endif %}
    
    {% if is_granted('ROLE_PROFESOR') %}
        <strong>
            Estas logueado como usuario normal
        </strong>
    {% endif %}
    
    

    <div class="col-lg-4">
        <h2>Iniciar sesión</h2>
        <hr>
        {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}{{ status }}</div>
                <hr>
        {% endif %}
        <form action="{{path("login_check")}}" method="post">
            <label>Nombre de Usuario (Nickname):</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}">
            <br>
            <label>Contraseña:</label>
            <input class="form-control" type="password" id="password" name="_password"><br>
            <input class="btn btn-success" type="submit" value="Entrar">
            <input class="btn btn-success" type="reset" value="Cancelar">
            <input type="hidden" name="_target_path" value="/login">
        </form>
    </div>
    <div class="clear-fix">

    </div>

{% endblock %}